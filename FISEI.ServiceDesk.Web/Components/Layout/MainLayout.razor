@inherits LayoutComponentBase

@inject NavigationManager Nav
@inject FISEI.ServiceDesk.Web.Services.AuthClientService Auth

<div class="page">
    <main>
        <div class="top-row px-4">
            <a class="text-sm font-semibold" href="/">ServiceDesk</a>
            <div class="flex items-center gap-3">
                @if (Auth.IsAuthenticated)
                {
                    <span class="text-xs opacity-80">@Auth.CurrentUserName (@Auth.CurrentUserRole)</span>
                    <a class="text-sm" href="#" @onclick="OnLogoutClicked">Salir</a>
                }
                else
                {
                    <a class="text-sm" href="/login">Login</a>
                }
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private void OnLogoutClicked()
    {
        Auth.Logout();
        Nav.NavigateTo("/login", true);
    }
}

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
