@implements IAsyncDisposable
@inject ToastService Toast

<div class="toast-container">
    @foreach (var message in messages)
    {
        <div class="toast @GetToastClass(message.Type)" role="alert">
            <div class="toast-header">
                <strong class="me-auto">@message.Title</strong>
                <small>@message.HelpText</small>
                <button type="button" class="btn-close" @onclick="() => RemoveToast(message)"></button>
            </div>
            <div class="toast-body">
                @message.Message
            </div>
        </div>
    }
</div>

@code {
    private List<ToastMessage> messages = new();
    private System.Timers.Timer? timer;

    protected override void OnInitialized()
    {
        Toast.OnShow += HandleShowAsync;
    }

    private async Task HandleShowAsync(ToastMessage message)
    {
        messages.Add(message);
        await InvokeAsync(StateHasChanged);

        if (message.AutoHide)
        {
            _ = Task.Delay(6000).ContinueWith(async _ =>
            {
                RemoveToast(message);
                await InvokeAsync(StateHasChanged);
            });
        }
    }

    private void RemoveToast(ToastMessage message)
    {
        messages.Remove(message);
    }

    private string GetToastClass(ToastType type) => type switch
    {
        ToastType.Success => "toast-success",
        ToastType.Danger => "toast-danger",
        ToastType.Warning => "toast-warning",
        ToastType.Info => "toast-info",
        ToastType.Primary => "toast-primary",
        ToastType.Secondary => "toast-secondary",
        ToastType.Dark => "toast-dark",
        _ => "toast-info"
    };

    async ValueTask IAsyncDisposable.DisposeAsync()
    {
        Toast.OnShow -= HandleShowAsync;
    }
}

<style>
