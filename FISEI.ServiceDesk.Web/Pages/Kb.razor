@page "/kb"
@using FISEI.ServiceDesk.Web.Services
@inject NavigationManager Nav
@inject FISEI.ServiceDesk.Web.Services.AuthClientService Auth
@inject FISEI.ServiceDesk.Web.Services.KnowledgeBaseService KbSvc
@inject FISEI.ServiceDesk.Web.Services.ServiciosService ServSvc
@inject FISEI.ServiceDesk.Web.Services.LaboratoriosService LabSvc
@inject FISEI.ServiceDesk.Web.Services.CategoriasService CatSvc
@inject FISEI.ServiceDesk.Web.Services.IncidenciasService IncSvc

@code {
    private const int PageSize = 20;
    private bool loading = true;
    private string? error;

    private string q = "";
    private int? servicioId;
    private int? laboratorioId;
    private int? categoriaId;

    private List<ServicioDto> servicios = new();
    private List<LaboratorioDto> laboratorios = new();
    private List<CategoriaDto> categorias = new();

    private Dictionary<int,string> mapServicios = new();
    private Dictionary<int,string> mapLabs = new();

    private PagedResult<KbArticuloResumenDto> result = new() { Items = new(), Total = 0, Page = 1, PageSize = PageSize };

    // Modal Artículo
    private bool mostrarArticulo = false;
    private bool loadingArticulo = false;
    private KbArticuloDto? articuloDetalle;
    private string? articuloServicioNombre;
    private string? articuloLaboratorioNombre;
    private string? articuloAutorNombre;
    private bool editandoArticulo = false;
    private bool savingArticulo = false;
    private KbArticuloDto? articuloEditForm;

    // Modal Incidencia
    private bool mostrarIncidencia = false;
    private bool loadingIncidencia = false;
    private IncidenciaDetalleDto? incidenciaDetalle;

    protected override async Task OnInitializedAsync()
    {
        if (!Auth.IsAuthenticated) { Nav.NavigateTo("/login", true); return; }
        await CargarCatalogos();
        await Buscar();
    }

    private async Task CargarCatalogos()
    {
        try
        {
            var t1 = ServSvc.ListarAsync();
            var t2 = LabSvc.ListarAsync();
            var t3 = CatSvc.ListarAsync(); // opcional si tu API tiene categorías
            await Task.WhenAll(t1, t2, t3);
            servicios = t1.Result; laboratorios = t2.Result; categorias = t3.Result;
            mapServicios = servicios.ToDictionary(x => x.Id, x => x.Nombre);
            mapLabs = laboratorios.ToDictionary(x => x.Id, x => x.Nombre);
        }
        catch (Exception ex) { error = "Error cargando catálogos: " + ex.Message; }
    }

    private async Task Buscar(int page = 1)
    {
        loading = true; error = null;
        try
        {
            result = await KbSvc.BuscarAsync(q, servicioId, laboratorioId, null, page, PageSize);
        }
        catch (Exception ex) { error = ex.Message; }
        finally { loading = false; }
    }

    private static IEnumerable<string> SplitTags(string? tags)
        => string.IsNullOrWhiteSpace(tags) ? Array.Empty<string>() : tags.Split(new[]{';',','}, StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);

    private static IEnumerable<string> SplitRefs(string? refs)
        => string.IsNullOrWhiteSpace(refs) ? Array.Empty<string>() : refs.Split(new[]{'\n',';'}, StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries);

    private string NombreServicio(int? id) => (id.HasValue && mapServicios.TryGetValue(id.Value, out var n)) ? n : (id is null ? "-" : $"#{id}");
    private string NombreLab(int? id) => (id.HasValue && mapLabs.TryGetValue(id.Value, out var n)) ? n : (id is null ? "-" : $"#{id}");

    private int TotalPages => (int)Math.Ceiling((double)(result.Total ?? 0) / PageSize);
    private bool CanPrev => result.Page > 1;
    private bool CanNext => result.Page < TotalPages;
    private Task Prev() => Buscar(result.Page - 1);
    private Task Next() => Buscar(result.Page + 1);

    private async Task AbrirArticuloModal(int id)
    {
      loadingArticulo = true; error = null;
      try
      {
        articuloDetalle = await KbSvc.ObtenerAsync(id);
        if (articuloDetalle != null)
        {
          articuloServicioNombre = articuloDetalle.ServicioNombre ?? (articuloDetalle.ServicioId.HasValue ? (await ServSvc.ObtenerAsync(articuloDetalle.ServicioId.Value))?.Nombre : null);
          articuloLaboratorioNombre = articuloDetalle.LaboratorioNombre ?? (articuloDetalle.LaboratorioId.HasValue ? (await LabSvc.ObtenerAsync(articuloDetalle.LaboratorioId.Value))?.Nombre : null);
          articuloAutorNombre = articuloDetalle.AutorNombre;
        }
        mostrarArticulo = true;
      }
      catch (Exception ex) { error = ex.Message; }
      finally { loadingArticulo = false; }
    }

    private void CerrarArticuloModal()
    {
        mostrarArticulo = false;
        articuloDetalle = null;
        articuloServicioNombre = articuloLaboratorioNombre = articuloAutorNombre = null;
        loadingArticulo = false;
        editandoArticulo = false;
        articuloEditForm = null;
    }

    private bool EsRol(string r)
      => string.Equals(Auth.CurrentUserRole, r, StringComparison.OrdinalIgnoreCase);
    private bool EsAdmin
      => EsRol("ADMINISTRADOR") || EsRol("ADMIN") || EsRol("Administrador") || EsRol("Admin");
    private bool EsTecnico
      => EsRol("TECNICO") || EsRol("TÉCNICO") || EsRol("Tecnico") || EsRol("Técnico");

    private void AbrirEdicionArticulo()
    {
      if (articuloDetalle is null) return;
      articuloEditForm = new KbArticuloDto
      {
        Id = articuloDetalle.Id,
        Titulo = articuloDetalle.Titulo,
        Contenido = articuloDetalle.Contenido,
        Referencias = articuloDetalle.Referencias,
        Etiquetas = articuloDetalle.Etiquetas,
        ServicioId = articuloDetalle.ServicioId,
        LaboratorioId = articuloDetalle.LaboratorioId
      };
      editandoArticulo = true;
    }

    private void CancelarEdicion()
    {
      editandoArticulo = false;
      articuloEditForm = null;
    }

    private async Task GuardarArticulo()
    {
      if (articuloEditForm is null) return;
      savingArticulo = true;
      error = null;
      try
      {
        await KbSvc.ActualizarAsync(articuloEditForm.Id, articuloEditForm);
        articuloDetalle!.Titulo = articuloEditForm.Titulo;
        articuloDetalle!.Contenido = articuloEditForm.Contenido;
        articuloDetalle!.Referencias = articuloEditForm.Referencias;
        articuloDetalle!.Etiquetas = articuloEditForm.Etiquetas;
        articuloDetalle!.ServicioId = articuloEditForm.ServicioId;
        articuloDetalle!.LaboratorioId = articuloEditForm.LaboratorioId;
        editandoArticulo = false;
        articuloEditForm = null;
      }
      catch (Exception ex)
      {
        error = ex.Message;
      }
      finally { savingArticulo = false; }
    }
    private async Task AbrirIncidenciaModal(int id)
    {
      loadingIncidencia = true; error = null;
      try
      {
        incidenciaDetalle = await IncSvc.ObtenerDetalleAsync(id);
        mostrarIncidencia = true;
      }
      catch (Exception ex) { error = ex.Message; }
      finally { loadingIncidencia = false; }
    }

    private void CerrarIncidenciaModal()
    {
      mostrarIncidencia = false;
      incidenciaDetalle = null;
      loadingIncidencia = false;
    }
}

<RoleNav />

<main class="main-content">
  <section class="content-card">
    <div class="page-header">
      <div>
        <h2 class="page-title"><i class="fas fa-book"></i> Base de Conocimiento</h2>
        <p class="page-subtitle">Busca soluciones, guías y documentación técnica</p>
      </div>
      <button class="btn btn-primary" @onclick="() => Buscar(1)">
        <i class="fas fa-sync-alt"></i> Actualizar
      </button>
    </div>

    @if (loading)
    {
      <div class="loading-container">
        <div class="spinner"></div>
        <p class="text-muted">Cargando artículos...</p>
      </div>
    }
    else if (!string.IsNullOrEmpty(error))
    {
      <div class="alert alert-error">
        <i class="fas fa-exclamation-circle"></i> @error
      </div>
    }
    else
    {
      <div class="filters-section">
        <div class="filters-grid">
          <div class="form-group">
            <label class="form-label">
              <i class="fas fa-search"></i> Buscar
            </label>
            <input class="form-control" placeholder="Título, contenido o etiqueta..." @bind="q" />
          </div>
          
          <div class="form-group">
            <label class="form-label">
              <i class="fas fa-cogs"></i> Servicio
            </label>
            <InputSelect @bind-Value="servicioId" class="form-control">
              <option value="">Todos los servicios</option>
              @foreach (var s in servicios) { <option value="@s.Id">@s.Nombre</option> }
            </InputSelect>
          </div>

          <div class="form-group">
            <label class="form-label">
              <i class="fas fa-building"></i> Laboratorio
            </label>
            <InputSelect @bind-Value="laboratorioId" class="form-control">
              <option value="">Todos los laboratorios</option>
              @foreach (var l in laboratorios) { <option value="@l.Id">@l.Nombre</option> }
            </InputSelect>
          </div>

          <div class="form-group">
            <label class="form-label">
              <i class="fas fa-tag"></i> Categoría
            </label>
            <InputSelect @bind-Value="categoriaId" class="form-control">
              <option value="">Todas las categorías</option>
              @foreach (var c in categorias) { <option value="@c.Id">@c.Nombre</option> }
            </InputSelect>
          </div>
        </div>
        
        <div class="filters-actions">
          <button class="btn btn-primary" @onclick="() => Buscar(1)">
            <i class="fas fa-search"></i> Buscar
          </button>
        </div>
      </div>

      @if ((result.Items == null) || result.Items.Count == 0)
      {
        <div class="empty-state">
          <i class="fas fa-book-open"></i>
          <h3>No se encontraron artículos</h3>
          <p>Intenta ajustar los filtros de búsqueda</p>
        </div>
      }
      else
      {
        <div class="articles-grid">
          @foreach (var a in result.Items)
          {
            <article class="article-card">
              <div class="article-header">
                <h3 class="article-title">@a.Titulo</h3>
                <span class="article-date">
                  <i class="fas fa-calendar-alt"></i>
                  @a.FechaCreacion.ToLocalTime().ToString("dd/MM/yyyy")
                </span>
              </div>

              <div class="article-meta">
                <span class="badge badge-category">
                  <i class="fas fa-cogs"></i> @(a.ServicioNombre ?? NombreServicio(a.ServicioId))
                </span>
                <span class="badge badge-info">
                  <i class="fas fa-building"></i> @(a.LaboratorioNombre ?? NombreLab(a.LaboratorioId))
                </span>
                <span class="badge badge-secondary">
                  <i class="fas fa-user"></i> @(a.AutorNombre ?? $"#{a.AutorId}")
                </span>
              </div>

              @if (!string.IsNullOrWhiteSpace(a.Extracto))
              {
                <p class="article-excerpt">@a.Extracto</p>
              }

              @if (!string.IsNullOrWhiteSpace(a.Etiquetas))
              {
                <div class="article-tags">
                  @foreach (var tag in SplitTags(a.Etiquetas))
                  {
                    <span class="tag">#@tag</span>
                  }
                </div>
              }

              @if (!string.IsNullOrWhiteSpace(a.Referencias))
              {
                <div class="article-references">
                  <span class="references-label">
                    <i class="fas fa-link"></i> Referencias:
                  </span>
                  @foreach (var r in SplitRefs(a.Referencias))
                  {
                    var url = r.StartsWith("http", StringComparison.OrdinalIgnoreCase) ? r : $"https://{r}";
                    <a href="@url" target="_blank" class="reference-link">@r</a>
                  }
                </div>
              }

              <div class="article-actions">
                <button class="btn btn-primary" @onclick="() => AbrirArticuloModal(a.Id)">
                  <i class="fas fa-book-open"></i> Ver artículo
                </button>
                @if (a.IncidenciaOrigenId.HasValue)
                {
                  <button class="btn btn-secondary" @onclick="() => AbrirIncidenciaModal(a.IncidenciaOrigenId.Value)">
                    <i class="fas fa-ticket-alt"></i> Ver incidencia
                  </button>
                }
              </div>
            </article>
          }
        </div>

        <div class="pagination">
          <button class="btn" disabled="@(result.Page<=1)" @onclick="Prev">
            <i class="fas fa-chevron-left"></i> Anterior
          </button>
          <span class="pagination-info">
            Página <strong>@result.Page</strong> de <strong>@TotalPages</strong>
          </span>
          <button class="btn" disabled="@(!CanNext)" @onclick="Next">
            Siguiente <i class="fas fa-chevron-right"></i>
          </button>
        </div>
      }
    }
  </section>
</main>

@* Modal Artículo *@
@if (mostrarArticulo)
{
  <div class="modal-overlay" @onclick="CerrarArticuloModal">
    <div class="modal modal-xl" @onclick:stopPropagation="true">
      <div class="modal-header">
        <h5 class="modal-title"><i class="fas fa-book-open"></i> Artículo KB</h5>
        <button class="btn-close" @onclick="CerrarArticuloModal" title="Cerrar">×</button>
      </div>
      <div class="modal-body">
        @if (loadingArticulo)
        {
          <div class="loading-container-small"><div class="spinner-small"></div><p class="muted">Cargando artículo...</p></div>
        }
        else if (articuloDetalle is null)
        {
          <p class="muted">No se pudo cargar el artículo.</p>
        }
        else if (!editandoArticulo)
        {
          <div class="detalle-grid">
            <div class="detalle-section">
              <h4><i class="fas fa-info-circle"></i> Información</h4>
              <div class="detalle-info">
                <div class="info-row"><span class="info-label">Título:</span><span class="info-value fw-medium">@articuloDetalle.Titulo</span></div>
                <div class="info-row"><span class="info-label">Servicio:</span><span class="badge badge-category"><i class="fas fa-wrench"></i> @(articuloServicioNombre ?? NombreServicio(articuloDetalle.ServicioId))</span></div>
                <div class="info-row"><span class="info-label">Laboratorio:</span><span class="badge badge-info"><i class="fas fa-building"></i> @(articuloLaboratorioNombre ?? NombreLab(articuloDetalle.LaboratorioId))</span></div>
                <div class="info-row"><span class="info-label">Autor:</span><span class="info-value">@(articuloAutorNombre ?? $"#{articuloDetalle.AutorId}")</span></div>
                <div class="info-row"><span class="info-label">Creado:</span><span class="info-value">@articuloDetalle.FechaCreacion.ToLocalTime()</span></div>
                <div class="info-row"><span class="info-label">Actualizado:</span><span class="info-value">@articuloDetalle.UltimaActualizacion.ToLocalTime()</span></div>
              </div>
            </div>
            <div class="detalle-section">
              <h4><i class="fas fa-tags"></i> Etiquetas y referencias</h4>
              @if (!string.IsNullOrWhiteSpace(articuloDetalle.Etiquetas))
              {
                <div class="article-tags">
                  @foreach (var tag in SplitTags(articuloDetalle.Etiquetas))
                  {
                    <span class="tag">#@tag</span>
                  }
                </div>
              }
              else
              {
                <p class="muted">Sin etiquetas</p>
              }

              @if (!string.IsNullOrWhiteSpace(articuloDetalle.Referencias))
              {
                <div class="article-references">
                  <span class="references-label"><i class="fas fa-link"></i> Referencias:</span>
                  @foreach (var r in SplitRefs(articuloDetalle.Referencias))
                  {
                    var url = r.StartsWith("http", StringComparison.OrdinalIgnoreCase) ? r : $"https://{r}";
                    <a href="@url" target="_blank" class="reference-link">@r</a>
                  }
                </div>
              }
            </div>
          </div>

          <div class="detalle-section" style="margin-top:1rem">
            <h4><i class="fas fa-align-left"></i> Contenido</h4>
            @if (!string.IsNullOrWhiteSpace(articuloDetalle.ContenidoHtml))
            {
              @((MarkupString)articuloDetalle.ContenidoHtml)
            }
            else
            {
              <pre style="white-space:pre-wrap">@articuloDetalle.Contenido</pre>
            }
          </div>
        }
        else if (editandoArticulo && articuloEditForm is not null)
        {
          @if (!string.IsNullOrEmpty(error)) { <div class="alert alert-error"><i class="fas fa-exclamation-circle"></i> @error</div> }
          <div class="form-group">
            <label class="form-label"><i class="fas fa-heading"></i> Título</label>
            <input class="form-control" @bind="articuloEditForm.Titulo" placeholder="Título del artículo" />
          </div>
          <div class="form-grid">
            <div class="form-group">
              <label class="form-label"><i class="fas fa-wrench"></i> Servicio</label>
              <InputSelect @bind-Value="articuloEditForm.ServicioId" class="form-control">
                <option value="">Sin servicio</option>
                @foreach (var s in servicios)
                {
                  <option value="@s.Id">@s.Nombre</option>
                }
              </InputSelect>
            </div>
            <div class="form-group">
              <label class="form-label"><i class="fas fa-building"></i> Laboratorio</label>
              <InputSelect @bind-Value="articuloEditForm.LaboratorioId" class="form-control">
                <option value="">Sin laboratorio</option>
                @foreach (var l in laboratorios)
                {
                  <option value="@l.Id">@l.Nombre</option>
                }
              </InputSelect>
            </div>
          </div>
          <div class="form-group">
            <label class="form-label"><i class="fas fa-align-left"></i> Contenido</label>
            <textarea class="form-control" rows="6" @bind="articuloEditForm.Contenido" placeholder="Describe la solución aquí..."></textarea>
          </div>
          <div class="form-group">
            <label class="form-label"><i class="fas fa-tags"></i> Etiquetas (separadas por coma)</label>
            <input class="form-control" @bind="articuloEditForm.Etiquetas" placeholder="ej: error, solución, web" />
          </div>
          <div class="form-group">
            <label class="form-label"><i class="fas fa-link"></i> Referencias</label>
            <textarea class="form-control" rows="3" @bind="articuloEditForm.Referencias" placeholder="Enlaces o referencias relacionadas (uno por línea)"></textarea>
          </div>
        }
      </div>
      @if (!editandoArticulo && (EsAdmin || EsTecnico))
      {
        <div class="modal-footer">
          <button class="btn btn-primary" @onclick="AbrirEdicionArticulo">
            <i class="fas fa-edit"></i> Editar
          </button>
          <button class="btn btn-secondary" @onclick="CerrarArticuloModal">Cerrar</button>
        </div>
      }
      @if (editandoArticulo && articuloEditForm is not null)
      {
        <div class="modal-footer">
          <button class="btn btn-primary" disabled="@savingArticulo" @onclick="GuardarArticulo">
            <i class="fas fa-save"></i> @(savingArticulo ? "Guardando..." : "Guardar")
          </button>
          <button class="btn btn-secondary" @onclick="CancelarEdicion">
            <i class="fas fa-times"></i> Cancelar
          </button>
        </div>
      }
    </div>
  </div>
}

@* Modal Incidencia *@
@if (mostrarIncidencia)
{
  <div class="modal-overlay" @onclick="CerrarIncidenciaModal">
    <div class="modal modal-xl" @onclick:stopPropagation="true">
      <div class="modal-header">
        <h5 class="modal-title"><i class="fas fa-ticket-alt"></i> Incidencia</h5>
        <button class="btn-close" @onclick="CerrarIncidenciaModal" title="Cerrar">×</button>
      </div>
      <div class="modal-body">
        @if (loadingIncidencia)
        {
          <div class="loading-container-small"><div class="spinner-small"></div><p class="muted">Cargando incidencia...</p></div>
        }
        else if (incidenciaDetalle is null)
        {
          <p class="muted">No se pudo cargar la incidencia.</p>
        }
        else
        {
          <div class="detalle-grid">
            <div class="detalle-section">
              <h4><i class="fas fa-info-circle"></i> Información</h4>
              <div class="detalle-info">
                <div class="info-row"><span class="info-label">Título:</span><span class="info-value fw-medium">@incidenciaDetalle.Titulo</span></div>
                <div class="info-row"><span class="info-label">Descripción:</span><span class="info-value">@incidenciaDetalle.Descripcion</span></div>
                <div class="info-row"><span class="info-label">Servicio:</span><span class="badge badge-category"><i class="fas fa-wrench"></i> @incidenciaDetalle.ServicioNombre</span></div>
                <div class="info-row"><span class="info-label">Prioridad:</span><span class="badge badge-warning"><i class="fas fa-exclamation-circle"></i> @incidenciaDetalle.PrioridadNombre</span></div>
                <div class="info-row"><span class="info-label">Estado:</span><span class="badge badge-info"><i class="fas fa-flag"></i> @incidenciaDetalle.EstadoNombre</span></div>
              </div>
            </div>
            <div class="detalle-section">
              <h4><i class="fas fa-comments"></i> Comentarios (@(incidenciaDetalle.Comentarios?.Count ?? 0))</h4>
              @if (incidenciaDetalle.Comentarios?.Count > 0)
              {
                <div class="comentarios-list">
                  @foreach (var c in incidenciaDetalle.Comentarios)
                  {
                    <div class="comentario-item @(c.EsInterno ? "comentario-interno" : "")">
                      <div class="comentario-header">
                        <span class="comentario-autor"><i class="fas fa-user-circle"></i> @c.AutorNombre</span>
                        <span class="comentario-fecha text-muted">@c.Fecha.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</span>
                        @if (c.EsInterno) { <span class="badge badge-warning"><i class="fas fa-lock"></i> Interno</span>; }
                      </div>
                      <div class="comentario-texto">@c.Texto</div>
                    </div>
                  }
                </div>
              }
              else
              {
                <p class="muted">No hay comentarios aún</p>
              }
            </div>
          </div>
        }
      </div>
    </div>
  </div>
}

