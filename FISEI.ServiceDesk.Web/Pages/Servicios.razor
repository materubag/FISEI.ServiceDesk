@page "/servicios"
@using FISEI.ServiceDesk.Web.Services
@inject NavigationManager Nav
@inject FISEI.ServiceDesk.Web.Services.AuthClientService Auth
@inject FISEI.ServiceDesk.Web.Services.ServiciosService ServiciosService
@inject FISEI.ServiceDesk.Web.Services.CategoriasService CategoriasService
@using System.ComponentModel.DataAnnotations

@code {
    private bool loading = true;
    private string? error;
    private List<ServicioDto> servicios = new();
    private List<CategoriaDto> categorias = new();
  private bool mostrarFormulario = false; // controla modal
    private bool mostrarConfirmacion = false; // controla modal de confirmación
    private int? editId = null;
    private int? deleteId = null;
  private FormModel formModel = new();

    protected override async Task OnInitializedAsync()
    {
        if (!Auth.IsAuthenticated) { Nav.NavigateTo("/login", false); return; }
        try {
          categorias = await CategoriasService.ListarAsync();
          servicios = await ServiciosService.ListarAsync();
        }
        catch (Exception ex) { error = ex.Message; }
        finally { loading = false; }
    }

      private void Nuevo()
      {
        editId = null;
        formModel = new FormModel { CategoriaId = 0, Nombre = string.Empty, Activo = true };
        mostrarFormulario = true;
      }

      private void Editar(ServicioDto dto)
      {
        editId = dto.Id;
        formModel = new FormModel { CategoriaId = dto.CategoriaId, Nombre = dto.Nombre, Activo = dto.Activo };
        mostrarFormulario = true;
      }

      private async Task Guardar()
      {
        if (editId is null)
        {
          var creado = await ServiciosService.CrearAsync(new ServicioCreateDto
          {
            CategoriaId = formModel.CategoriaId,
            Nombre = formModel.Nombre,
            Activo = formModel.Activo
          });
          if (creado is not null)
          {
            servicios = await ServiciosService.ListarAsync();
            mostrarFormulario = false;
          }
        }
        else
        {
          var ok = await ServiciosService.ActualizarAsync(editId.Value, new ServicioUpdateDto
          {
            CategoriaId = formModel.CategoriaId,
            Nombre = formModel.Nombre,
            Activo = formModel.Activo
          });
          if (ok)
          {
            servicios = await ServiciosService.ListarAsync();
            mostrarFormulario = false;
          }
        }
      }

      private void Cancelar() => mostrarFormulario = false;

      private void ConfirmarEliminar(int id)
      {
        deleteId = id;
        mostrarConfirmacion = true;
      }

      private async Task EliminarConfirmado()
      {
        if (deleteId is int id)
        {
          var ok = await ServiciosService.EliminarAsync(id);
          if (ok)
          {
            servicios = await ServiciosService.ListarAsync();
          }
        }
        mostrarConfirmacion = false;
        deleteId = null;
      }

      private void CancelarEliminar()
      {
        mostrarConfirmacion = false;
        deleteId = null;
      }
}

<RoleNav />
<main class="main-content">
  <section class="content-card">
    <div class="page-header">
      <div>
        <h2 class="page-title"><i class="fas fa-cogs"></i> Servicios</h2>
        <p class="page-subtitle">Gestiona los servicios disponibles del sistema</p>
      </div>
      @if (!loading && servicios.Count > 0)
      {
        <button class="btn btn-primary btn-new" @onclick="Nuevo">
          <i class="fas fa-plus"></i> Nuevo servicio
        </button>
      }
    </div>

    @if (loading)
    {
      <div class="loading-container">
        <div class="spinner"></div>
        <p class="muted">Cargando servicios...</p>
      </div>
    }
    else if (!string.IsNullOrEmpty(error))
    {
      <div class="alert alert-error">
        <i class="fas fa-exclamation-circle"></i> @error
      </div>
    }
    else if (servicios.Count == 0)
    {
      <div class="empty-state">
        <i class="fas fa-inbox"></i>
        <h3>No hay servicios</h3>
        <p>Comienza creando tu primer servicio</p>
        <button class="btn btn-primary" @onclick="Nuevo">
          <i class="fas fa-plus"></i> Crear servicio
        </button>
      </div>
    }
    else
    {
      <div class="table-container">
        <table class="table-modern">
          <thead>
              <tr>
                  <th>ID</th>
                  <th>Nombre</th>
                  <th>Categoría</th>
                  <th>Estado</th>
                  <th class="text-end">Acciones</th>
              </tr>
          </thead>
          <tbody>
              @foreach (var s in servicios)
              {
                  var categoriaNombre = categorias.FirstOrDefault(c => c.Id == s.CategoriaId)?.Nombre ?? "-";
                  <tr>
                      <td><span class="badge badge-id">@s.Id</span></td>
                      <td class="fw-medium">@s.Nombre</td>
                      <td>
                        <span class="badge badge-category">
                          <i class="fas fa-tag"></i> @categoriaNombre
                        </span>
                      </td>
                      <td>
                        @if (s.Activo)
                        {
                          <span class="badge badge-success">
                            <i class="fas fa-check-circle"></i> Activo
                          </span>
                        }
                        else
                        {
                          <span class="badge badge-inactive">
                            <i class="fas fa-times-circle"></i> Inactivo
                          </span>
                        }
                      </td>
                      <td class="text-end">
                        <div class="action-buttons">
                          <button class="btn-icon btn-edit" @onclick="() => Editar(s)" title="Editar">
                            <i class="fas fa-edit"></i>
                          </button>
                          <button class="btn-icon btn-delete" @onclick="() => ConfirmarEliminar(s.Id)" title="Eliminar">
                            <i class="fas fa-trash-alt"> </i>
                          </button>
                        </div>
                      </td>
                  </tr>
              }
          </tbody>
        </table>
      </div>

      @if (mostrarFormulario)
      {
        <div class="modal-overlay" @onclick="Cancelar">
          <div class="modal" @onclick:stopPropagation="true">
            <div class="modal-header">
              <h5 class="modal-title">
                <i class="fas @(editId is null ? "fa-plus-circle" : "fa-edit")"></i>
                @(editId is null ? "Nuevo servicio" : "Editar servicio")
              </h5>
              <button class="btn-close" @onclick="Cancelar" title="Cerrar">×</button>
            </div>
            <div class="modal-body">
              <EditForm Model="formModel" OnValidSubmit="Guardar">
                <DataAnnotationsValidator />
                <div class="form-group">
                  <label class="form-label"><i class="fas fa-signature"></i> Nombre del servicio</label>
                  <InputText class="form-control" @bind-Value="formModel.Nombre" placeholder="Ej: Instalación de software" />
                  <ValidationMessage For="() => formModel.Nombre" class="validation-error" />
                </div>
                <div class="form-group">
                  <label class="form-label"><i class="fas fa-tag"></i> Categoría</label>
                  <InputSelect class="form-control" @bind-Value="formModel.CategoriaId">
                    <option value="0">-- Seleccione una categoría --</option>
                    @foreach (var c in categorias)
                    {
                      <option value="@c.Id">@c.Nombre</option>
                    }
                  </InputSelect>
                  <ValidationMessage For="() => formModel.CategoriaId" class="validation-error" />
                </div>
                <div class="form-group">
                  <div class="custom-checkbox">
                    <InputCheckbox id="chkActivo" @bind-Value="formModel.Activo" />
                    <label for="chkActivo"><i class="fas fa-check-circle"></i> Servicio activo</label>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Guardar
                  </button>
                  <button type="button" class="btn btn-secondary" @onclick="Cancelar">
                    <i class="fas fa-times"></i> Cancelar
                  </button>
                </div>
              </EditForm>
            </div>
          </div>
        </div>
      }
    }
  </section>
</main>

@code {
    public class FormModel
    {
        [Required(ErrorMessage = "El nombre es obligatorio")]
        [StringLength(100, ErrorMessage = "Máximo 100 caracteres")]
        public string Nombre { get; set; } = string.Empty;

        [Range(1, int.MaxValue, ErrorMessage = "Seleccione una categoría válida")]
        public int CategoriaId { get; set; }

        public bool Activo { get; set; } = true;
    }
}

<style>
  /* Page Header */
