              <i class="fas fa-save"></i> @(savingKb ? "Guardando..." : "Guardar")
            </button>
            <button class="btn btn-secondary" @onclick="CerrarKbModal">
              <i class="fas fa-times"></i> Cancelar
            </button>
          </div>
        </div>
      </div>
    }

