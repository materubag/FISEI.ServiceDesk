@page "/incidencias"
@using FISEI.ServiceDesk.Web.Services
@using Microsoft.AspNetCore.Components.Web
@inject NavigationManager Nav
@inject FISEI.ServiceDesk.Web.Services.AuthClientService Auth
@inject FISEI.ServiceDesk.Web.Services.IncidenciasService IncSvc
@inject FISEI.ServiceDesk.Web.Services.ServiciosService ServSvc
@inject FISEI.ServiceDesk.Web.Services.PrioridadesService PriSvc
@inject FISEI.ServiceDesk.Web.Services.EstadosService EstSvc
@inject FISEI.ServiceDesk.Web.Services.LaboratoriosService LabSvc
@inject FISEI.ServiceDesk.Web.Services.KnowledgeBaseService KbSvc
@inject FISEI.ServiceDesk.Web.Services.UsuariosService UsuSvc
@inject FISEI.ServiceDesk.Web.Services.ToastService Toast
@using System.Linq

@code {
  [Parameter, SupplyParameterFromQuery(Name = "estadoId")] public int? QEstadoId { get; set; }
  [Parameter, SupplyParameterFromQuery(Name = "prioridadId")] public int? QPrioridadId { get; set; }
  [Parameter, SupplyParameterFromQuery(Name = "search")] public string? QText { get; set; }
    private bool loading = true;
    private string? error;
    private List<IncidenciaResumenDto> items = new();
    private string filtroTexto = "";
    private int? filtroEstadoId;
    private int? filtroPrioridadId;

    private List<ServicioDto> servicios = new();
    private List<PrioridadDto> prioridades = new();
    private List<EstadoDto> estados = new();
    private List<LaboratorioDto> laboratorios = new();

    private Dictionary<int,string> mapServicios = new();
    private Dictionary<int,string> mapPrioridades = new();
    private Dictionary<int,string> mapEstados = new();

    // Modal Nueva Incidencia
    private bool mostrarFormularioNueva = false;
    private bool saving = false;
    private NuevaIncidenciaDto modelNueva = new();

    // Modal Detalle
    private bool mostrarDetalle = false;
    private int? incidenciaDetalleId = null;
    private IncidenciaDetalleDto? incDetalle = null;
    private bool loadingDetalle = false;
    private string nuevoComentario = "";
    private bool esInterno = false;

    // Modal Resolver
    private bool mostrarResolver = false;
    private int? incidenciaResolverId = null;
    private string comentarioResolver = "";
    private bool savingResolver = false;
    private int selectedEstadoResolverId = 3;

    // Modal KB
    private bool mostrarKbModal = false;
    private bool savingKb = false;
    private KbCrearDto kbForm = new();

    // Modal Asignar Técnico
    private bool mostrarAsignarTecnico = false;
    private int? tecnicoSeleccionadoId = null;
    private List<UsuarioSimpleDto> tecnicos = new();
    private bool savingAsignacion = false;
    private string? errorAsignacion = null;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Asegurar que la autenticación esté inicializada
            await Auth.EnsureInitializedAsync();
            if (!Auth.IsAuthenticated) { Nav.NavigateTo("/login", true); return; }
            var t1 = ServSvc.ListarAsync();
            var t2 = PriSvc.ListarAsync();
            var t3 = EstSvc.ListarAsync();
            var t4 = LabSvc.ListarAsync();
            await Task.WhenAll(t1, t2, t3, t4);

            servicios = t1.Result; prioridades = t2.Result; estados = t3.Result; laboratorios = t4.Result;
            mapServicios = servicios.ToDictionary(x => x.Id, x => string.IsNullOrWhiteSpace(x.Nombre) ? $"#{x.Id}" : x.Nombre);
            mapPrioridades = prioridades.ToDictionary(x => x.Id, x => string.IsNullOrWhiteSpace(x.Nombre) ? $"#{x.Id}" : x.Nombre);
            mapEstados = estados.ToDictionary(x => x.Id, x => (string.IsNullOrWhiteSpace(x.Nombre) ? (x.Codigo ?? $"#{x.Id}") : x.Nombre));

        // Aplicar filtros provenientes de querystring si existen
        if (QEstadoId.HasValue) filtroEstadoId = QEstadoId;
        if (QPrioridadId.HasValue) filtroPrioridadId = QPrioridadId;
        if (!string.IsNullOrWhiteSpace(QText)) filtroTexto = QText!;
        }
        catch (Exception ex) { error = "Error cargando catálogos: " + ex.Message; }

        await Cargar();
    }

    private async Task Cargar()
    {
        loading = true; error = null;
        try
        {
        if (EsAdmin || EsTecnico)
        {
          items = await IncSvc.ListarTodasAsync(filtroTexto?.Trim(), filtroEstadoId, filtroPrioridadId);
        }
        else
        {
          items = await IncSvc.ListarAsync(Auth.CurrentUserId!.Value, filtroTexto?.Trim(), filtroEstadoId, filtroPrioridadId);
        }
            await ResolverNombresFaltantes();
        }
        catch (Exception ex) { error = ex.Message; }
        finally { loading = false; }
    }

    private bool EsRol(string r)
      => string.Equals(Auth.CurrentUserRole, r, StringComparison.OrdinalIgnoreCase);
    private bool EsAdmin
      => EsRol("ADMINISTRADOR") || EsRol("ADMIN") || EsRol("Administrador") || EsRol("Admin");
    private bool EsTecnico
      => EsRol("TECNICO") || EsRol("TÉCNICO") || EsRol("Tecnico") || EsRol("Técnico");
    private bool EsEstudianteODocente
      => EsRol("ESTUDIANTE") || EsRol("DOCENTE") || EsRol("Estudiante") || EsRol("Docente");

    private bool EsEstadoResuelto(int estadoId, string? estadoNombre)
    {
        if (!string.IsNullOrWhiteSpace(estadoNombre) && estadoNombre.Contains("resuelto", StringComparison.OrdinalIgnoreCase)) return true;
        var e = estados.FirstOrDefault(x => x.Id == estadoId);
        var codigo = e?.Codigo ?? string.Empty;
        var nombre = e?.Nombre ?? string.Empty;
        return string.Equals(codigo, "RESUELTO", StringComparison.OrdinalIgnoreCase)
               || (!string.IsNullOrWhiteSpace(nombre) && nombre.Contains("resuelto", StringComparison.OrdinalIgnoreCase));
    }

    private async Task ResolverNombresFaltantes()
    {
        // Servicio
        var faltanServ = items.Select(i => (i.ServicioId, i.ServicioNombre))
                              .Where(x => string.IsNullOrWhiteSpace(x.ServicioNombre) && !mapServicios.ContainsKey(x.ServicioId))
                              .Select(x => x.ServicioId).Distinct().ToList();
        foreach (var id in faltanServ)
        {
          var dto = await ServSvc.ObtenerAsync(id);
          if (dto != null) mapServicios[id] = string.IsNullOrWhiteSpace(dto.Nombre) ? $"#{id}" : dto.Nombre;
        }

        // Prioridad
        var faltanPri = items.Select(i => (i.PrioridadId, i.PrioridadNombre))
                             .Where(x => string.IsNullOrWhiteSpace(x.PrioridadNombre) && !mapPrioridades.ContainsKey(x.PrioridadId))
                             .Select(x => x.PrioridadId).Distinct().ToList();
        foreach (var id in faltanPri)
        {
          var dto = await PriSvc.ObtenerAsync(id);
          if (dto != null) mapPrioridades[id] = string.IsNullOrWhiteSpace(dto.Nombre) ? $"#{id}" : dto.Nombre;
        }

        // Estado
        var faltanEst = items.Select(i => (i.EstadoId, i.EstadoNombre))
                             .Where(x => string.IsNullOrWhiteSpace(x.EstadoNombre) && !mapEstados.ContainsKey(x.EstadoId))
                             .Select(x => x.EstadoId).Distinct().ToList();
        foreach (var id in faltanEst)
        {
          var dto = await EstSvc.ObtenerAsync(id);
          if (dto != null)
          {
            var nombre = !string.IsNullOrWhiteSpace(dto.Nombre) ? dto.Nombre : (dto.Codigo ?? $"#{id}");
            mapEstados[id] = nombre;
          }
        }

        StateHasChanged();
    }

    private string NombreServicio(IncidenciaResumenDto i)
        => !string.IsNullOrWhiteSpace(i.ServicioNombre) ? i.ServicioNombre
         : mapServicios.TryGetValue(i.ServicioId, out var n) ? n : $"#{i.ServicioId}";

    private string NombrePrioridad(IncidenciaResumenDto i)
        => !string.IsNullOrWhiteSpace(i.PrioridadNombre) ? i.PrioridadNombre
         : mapPrioridades.TryGetValue(i.PrioridadId, out var n) ? n : $"#{i.PrioridadId}";

    private string NombreEstado(IncidenciaResumenDto i)
        => !string.IsNullOrWhiteSpace(i.EstadoNombre) ? i.EstadoNombre
         : mapEstados.TryGetValue(i.EstadoId, out var n) ? n : $"#{i.EstadoId}";

    // Modal Nueva Incidencia
    private void AbrirFormularioNueva()
    {
      if (!EsEstudianteODocente) return;
        modelNueva = new NuevaIncidenciaDto
        {
            CreadorId = Auth.CurrentUserId!.Value,
            ServicioId = servicios.Count > 0 ? servicios[0].Id : 0,
            PrioridadId = 2
        };
        mostrarFormularioNueva = true;
    }

    private async Task GuardarNuevaIncidencia()
    {
        error = null; saving = true;
        try
        {
            var idNueva = await IncSvc.CrearAsync(modelNueva);
            mostrarFormularioNueva = false;
            await Toast.ShowSuccessAsync("Incidencia creada exitosamente.");
            await Cargar();
            // Abrir detalle de la nueva incidencia
            await AbrirDetalle(idNueva);
        }
        catch (Exception ex) 
        { 
            error = ex.Message;
            await Toast.ShowErrorAsync($"Error al crear la incidencia: {ex.Message}");
        }
        finally { saving = false; }
    }

    private void CancelarNueva() => mostrarFormularioNueva = false;

    private async Task HandleSearchKey(KeyboardEventArgs e)
    {
      if (string.Equals(e.Key, "Enter", StringComparison.OrdinalIgnoreCase))
      {
        await Cargar();
      }
    }

    // Modal Detalle
    private async Task AbrirDetalle(int id)
    {
        incidenciaDetalleId = id;
        mostrarDetalle = true;
        loadingDetalle = true;
        try
        {
            incDetalle = await IncSvc.ObtenerDetalleAsync(id);
            // Resolver nombres si es necesario
            if (incDetalle != null)
            {
                if (string.IsNullOrWhiteSpace(incDetalle.ServicioNombre) && mapServicios.ContainsKey(incDetalle.ServicioId))
                    incDetalle.ServicioNombre = mapServicios[incDetalle.ServicioId];
                if (string.IsNullOrWhiteSpace(incDetalle.PrioridadNombre) && mapPrioridades.ContainsKey(incDetalle.PrioridadId))
                    incDetalle.PrioridadNombre = mapPrioridades[incDetalle.PrioridadId];
                if (string.IsNullOrWhiteSpace(incDetalle.EstadoNombre) && mapEstados.ContainsKey(incDetalle.EstadoId))
                    incDetalle.EstadoNombre = mapEstados[incDetalle.EstadoId];

          // Auto-cambiar a "EN_PROGRESO/EN_PROCESO" solo para Admin/Técnico y si el estado actual NO es final
          var estadoActual = estados.FirstOrDefault(e => e.Id == incDetalle.EstadoId);
          var esFinalActual = estadoActual?.EsFinal == true
                    || string.Equals(estadoActual?.Codigo, "RESUELTO", StringComparison.OrdinalIgnoreCase)
                    || string.Equals(estadoActual?.Codigo, "CERRADO", StringComparison.OrdinalIgnoreCase);

          if ((EsAdmin || EsTecnico) && !esFinalActual)
          {
            var estadoEnProceso = estados.FirstOrDefault(e =>
              (!string.IsNullOrWhiteSpace(e.Codigo) && (
                string.Equals(e.Codigo, "EN_PROGRESO", StringComparison.OrdinalIgnoreCase)
                || string.Equals(e.Codigo, "EN_PROCESO", StringComparison.OrdinalIgnoreCase)
                || e.Codigo.Contains("PROGRES", StringComparison.OrdinalIgnoreCase)
                || e.Codigo.Contains("PROCES", StringComparison.OrdinalIgnoreCase)))
              || (!string.IsNullOrWhiteSpace(e.Nombre) && (
                e.Nombre.Contains("progreso", StringComparison.OrdinalIgnoreCase)
                || e.Nombre.Contains("proceso", StringComparison.OrdinalIgnoreCase)))
            );

            if (estadoEnProceso != null && incDetalle.EstadoId != estadoEnProceso.Id)
            {
              try
              {
                await IncSvc.CambiarEstadoAsync(id, estadoEnProceso.Id, Auth.CurrentUserId!.Value, "Marcado como En proceso al ver detalle");
                // Refrescar detalle y listado para reflejar el nuevo estado
                incDetalle = await IncSvc.ObtenerDetalleAsync(id);
                if (incDetalle != null)
                {
                  if (string.IsNullOrWhiteSpace(incDetalle.ServicioNombre) && mapServicios.ContainsKey(incDetalle.ServicioId))
                    incDetalle.ServicioNombre = mapServicios[incDetalle.ServicioId];
                  if (string.IsNullOrWhiteSpace(incDetalle.PrioridadNombre) && mapPrioridades.ContainsKey(incDetalle.PrioridadId))
                    incDetalle.PrioridadNombre = mapPrioridades[incDetalle.PrioridadId];
                  if (string.IsNullOrWhiteSpace(incDetalle.EstadoNombre) && mapEstados.ContainsKey(incDetalle.EstadoId))
                    incDetalle.EstadoNombre = mapEstados[incDetalle.EstadoId];
                }
                await Cargar();
              }
              catch (Exception exAuto)
              {
                // No bloquear el detalle si falla el cambio automático
                error = error is null ? exAuto.Message : error;
              }
            }
          }
            }
        }
        catch (Exception ex) { error = ex.Message; }
        finally { loadingDetalle = false; }
    }

    private void CerrarDetalle()
    {
        mostrarDetalle = false;
        incidenciaDetalleId = null;
        incDetalle = null;
        nuevoComentario = "";
    }

    private async Task EnviarComentario()
    {
        if (string.IsNullOrWhiteSpace(nuevoComentario) || incidenciaDetalleId == null) return;
        try
        {
            await IncSvc.AgregarComentarioAsync(incidenciaDetalleId.Value, new ComentarioCrearDto { Texto = nuevoComentario, EsInterno = esInterno });
            await Toast.ShowSuccessAsync("Comentario agregado exitosamente.");
            nuevoComentario = "";
            esInterno = false;
            await AbrirDetalle(incidenciaDetalleId.Value); // Recargar
        }
        catch (Exception ex) 
        { 
            error = ex.Message;
            await Toast.ShowErrorAsync($"Error al agregar el comentario: {ex.Message}");
        }
    }

    private void AbrirResolver(int id)
    {
      incidenciaResolverId = id;
      comentarioResolver = "Se resolvió";
      selectedEstadoResolverId = items.FirstOrDefault(x => x.Id == id)?.EstadoId ?? 3;
      mostrarResolver = true;
    }

    private void CerrarResolver()
    {
      mostrarResolver = false;
      incidenciaResolverId = null;
      comentarioResolver = "";
      savingResolver = false;
    }

    private async Task ConfirmarResolver()
    {
      if (incidenciaResolverId == null) return;
      savingResolver = true;
      try
      {
        var comentario = string.IsNullOrWhiteSpace(comentarioResolver) ? "Se resolvió" : comentarioResolver.Trim();
        await IncSvc.CambiarEstadoAsync(incidenciaResolverId.Value, selectedEstadoResolverId, Auth.CurrentUserId!.Value, comentario);
        await Toast.ShowSuccessAsync("Incidencia marcada como resuelta.");
        CerrarResolver();
        await Cargar();
        if (mostrarDetalle && incidenciaDetalleId.HasValue && incidenciaDetalleId.Value == incidenciaResolverId.Value)
        {
          await AbrirDetalle(incidenciaResolverId.Value);
        }
      }
      catch (Exception ex)
      {
        error = ex.Message;
        await Toast.ShowErrorAsync($"Error al resolver la incidencia: {ex.Message}");
      }
      finally { savingResolver = false; }
    }

    private void AbrirKbModal()
    {
      if (incDetalle is null) return;
      var ahora = DateTime.UtcNow;
      kbForm = new KbCrearDto
      {
        Titulo = incDetalle.Titulo,
        Contenido = incDetalle.Descripcion,
        Referencias = $"INC-{incDetalle.Id}",
        Etiquetas = incDetalle.ServicioNombre,
        ServicioId = incDetalle.ServicioId,
        LaboratorioId = null,
        AutorId = Auth.CurrentUserId!.Value,
        IncidenciaOrigenId = incDetalle.Id,
        FechaCreacion = ahora,
        UltimaActualizacion = ahora
      };
      mostrarKbModal = true;
    }

    private void CerrarKbModal()
    {
      mostrarKbModal = false;
      savingKb = false;
    }

    private async Task GuardarKb()
    {
      if (incDetalle is null) return;
      savingKb = true; error = null;
      try
      {
        await KbSvc.CrearDesdeIncidenciaAsync(incDetalle.Id, kbForm);
        mostrarKbModal = false;
        // Mostrar mensaje de éxito
        error = null;
      }
      catch (HttpRequestException ex) when (ex.StatusCode == System.Net.HttpStatusCode.Conflict)
      {
        error = "Ya existe un artículo con este título en la base de conocimiento.";
      }
      catch (Exception ex)
      {
        error = ex.Message;
      }
      finally { savingKb = false; }
    }

    // Métodos de asignación de técnico
    private async Task AbrirAsignarTecnicoModal()
    {
      try
      {
        tecnicos = await UsuSvc.ObtenerTecnicosAsync();
        tecnicoSeleccionadoId = null;
        errorAsignacion = null;
        mostrarAsignarTecnico = true;
      }
      catch (Exception ex)
      {
        error = "Error cargando técnicos: " + ex.Message;
      }
    }

    private void CerrarAsignarTecnicoModal()
    {
      mostrarAsignarTecnico = false;
      tecnicoSeleccionadoId = null;
      errorAsignacion = null;
    }

    private async Task ConfirmarAsignacion()
    {
      if (!tecnicoSeleccionadoId.HasValue || incDetalle is null) return;
      savingAsignacion = true; errorAsignacion = null;
      try
      {
        await IncSvc.AsignarTecnicoAsync(incDetalle.Id, tecnicoSeleccionadoId.Value, Auth.CurrentUserId!.Value);
        await Toast.ShowSuccessAsync("Técnico asignado exitosamente.");
        mostrarAsignarTecnico = false;
        // Recargar detalles
        await AbrirDetalle(incDetalle.Id);
      }
      catch (Exception ex)
      {
        errorAsignacion = ex.Message;
        await Toast.ShowErrorAsync($"Error al asignar el técnico: {ex.Message}");
      }
      finally { savingAsignacion = false; }
    }
}

<RoleNav />
<main class="main-content">
  <section class="content-card">
    <div class="page-header">
      <div>
        <h2 class="page-title"><i class="fas fa-list-alt"></i> Incidencias</h2>
        <p class="page-subtitle">Gestiona las incidencias del sistema</p>
      </div>
      @if (!loading && EsEstudianteODocente)
      {
        <button class="btn btn-primary btn-new" @onclick="AbrirFormularioNueva">
          <i class="fas fa-plus"></i> Nueva incidencia
        </button>
      }
    </div>

    <!-- Filtros -->
    <div class="filters-section">
      <div class="filters-header">
        <h3><i class="fas fa-filter"></i> Filtros</h3>
        <button class="btn-icon btn-refresh" @onclick="Cargar" title="Actualizar">
          <i class="fas fa-sync-alt"></i>
        </button>
      </div>
      <div class="filters-grid">
        <div class="form-group">
          <label><i class="fas fa-search"></i> Buscar</label>
          <input class="form-control" placeholder="Título, descripción..." @bind="filtroTexto" @bind:event="oninput" @onkeydown="HandleSearchKey" />
        </div>
        <div class="form-group">
          <label><i class="fas fa-flag"></i> Estado</label>
          <InputSelect @bind-Value="filtroEstadoId" class="form-control">
            <option value="">Todos los estados</option>
            @foreach (var e in estados)
            {
              var nombreEstado = !string.IsNullOrWhiteSpace(e.Nombre) ? e.Nombre : (e.Codigo ?? $"#{e.Id}");
              <option value="@e.Id">@nombreEstado</option>
            }
          </InputSelect>
        </div>
        <div class="form-group">
          <label><i class="fas fa-exclamation-circle"></i> Prioridad</label>
          <InputSelect @bind-Value="filtroPrioridadId" class="form-control">
            <option value="">Todas las prioridades</option>
            @foreach (var p in prioridades)
            {
              var pn = string.IsNullOrWhiteSpace(p.Nombre) ? $"#{p.Id}" : p.Nombre;
              <option value="@p.Id">@pn</option>
            }
          </InputSelect>
        </div>
        <div class="form-group-action">
          <button class="btn btn-primary" @onclick="Cargar">
            <i class="fas fa-search"></i> Aplicar
          </button>
        </div>
      </div>
    </div>

    @if (loading)
    {
      <div class="loading-container">
        <div class="spinner"></div>
        <p class="muted">Cargando incidencias...</p>
      </div>
    }
    else if (!string.IsNullOrEmpty(error))
    {
      <div class="alert alert-error">
        <i class="fas fa-exclamation-circle"></i> @error
      </div>
    }
    else if (items.Count == 0)
    {
      <div class="empty-state">
        <i class="fas fa-inbox"></i>
        <h3>No hay incidencias</h3>
        <p>No se encontraron incidencias con los filtros aplicados</p>
        <button class="btn btn-primary" @onclick="AbrirFormularioNueva">
          <i class="fas fa-plus"></i> Crear incidencia
        </button>
      </div>
    }
    else
    {
      <div class="table-container">
        <table class="table-modern">
          <thead>
            <tr>
              <th>ID</th>
              <th>Fecha</th>
              <th>Servicio</th>
              <th>Título</th>
              <th>Prioridad</th>
              <th>Estado</th>
              <th class="text-end">Acciones</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var t in items)
            {
              <tr>
                <td><span class="badge badge-id">@t.Id</span></td>
                <td class="text-muted">@t.FechaCreacion.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                  <span class="badge badge-category">
                    <i class="fas fa-wrench"></i> @NombreServicio(t)
                  </span>
                </td>
                <td class="fw-medium">@t.Titulo</td>
                <td>
                  @{
                    var prioNombre = NombrePrioridad(t).ToLower();
                    var prioBadgeClass = prioNombre.Contains("alta") || prioNombre.Contains("crítica") ? "badge-danger" 
                                       : prioNombre.Contains("media") ? "badge-warning" 
                                       : "badge-success";
                  }
                  <span class="badge @prioBadgeClass">
                    <i class="fas fa-exclamation-circle"></i> @NombrePrioridad(t)
                  </span>
                </td>
                <td>
                  @{
                    var estadoNombre = NombreEstado(t).ToLower();
                    var estadoBadgeClass = estadoNombre.Contains("resuelto") || estadoNombre.Contains("cerrado") ? "badge-success"
                                         : estadoNombre.Contains("progreso") || estadoNombre.Contains("asignado") ? "badge-warning"
                                         : "badge-info";
                  }
                  <span class="badge @estadoBadgeClass">
                    <i class="fas fa-info-circle"></i> @NombreEstado(t)
                  </span>
                </td>
                <td class="text-end">
                  <div class="action-buttons">
                    <button class="btn-icon btn-view" @onclick="() => AbrirDetalle(t.Id)" title="Ver detalles">
                      <i class="fas fa-eye"></i>
                    </button>
                    @if (EsAdmin || EsTecnico)
                    {
                      <button class="btn-icon btn-view" @onclick="() => AbrirResolver(t.Id)" title="Resolver">
                        <i class="fas fa-check"></i>
                      </button>
                    }
                  </div>
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    }

    @* Modal Nueva Incidencia *@
    @if (mostrarFormularioNueva)
    {
      <div class="modal-overlay" @onclick="CancelarNueva">
        <div class="modal modal-large" @onclick:stopPropagation="true">
          <div class="modal-header">
            <h5 class="modal-title">
              <i class="fas fa-plus-circle"></i> Nueva Incidencia
            </h5>
            <button class="btn-close" @onclick="CancelarNueva" title="Cerrar">×</button>
          </div>
          <div class="modal-body">
            @if (!string.IsNullOrEmpty(error)) { <div class="alert alert-error"><i class="fas fa-exclamation-circle"></i> @error</div> }
            <div class="form-grid">
              <div class="form-group">
