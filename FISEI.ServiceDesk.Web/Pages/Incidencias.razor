              <InputSelect @bind-Value="tecnicoSeleccionadoId" class="form-control">
                <option value="">-- Selecciona --</option>
                @foreach (var t in tecnicos)
                {
                  <option value="@t.Id">@t.Nombre (@t.Correo)</option>
                }
              </InputSelect>
            </div>
            <p class="text-muted">
              <i class="fas fa-info-circle"></i> El técnico recibirá una notificación sobre esta asignación.
