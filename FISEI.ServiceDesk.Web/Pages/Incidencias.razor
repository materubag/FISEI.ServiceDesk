@page "/incidencias"
@using FISEI.ServiceDesk.Web.Services
@inject NavigationManager Nav
@inject FISEI.ServiceDesk.Web.Services.AuthClientService Auth
@inject FISEI.ServiceDesk.Web.Services.IncidenciasService IncSvc
@inject FISEI.ServiceDesk.Web.Services.ServiciosService ServSvc
@inject FISEI.ServiceDesk.Web.Services.PrioridadesService PriSvc
@inject FISEI.ServiceDesk.Web.Services.EstadosService EstSvc
@inject FISEI.ServiceDesk.Web.Services.LaboratoriosService LabSvc
@using System.Linq

@code {
    private bool loading = true;
    private string? error;
    private List<IncidenciaResumenDto> items = new();
    private string filtroTexto = "";
    private int? filtroEstadoId;
    private int? filtroPrioridadId;

    private List<ServicioDto> servicios = new();
    private List<PrioridadDto> prioridades = new();
    private List<EstadoDto> estados = new();
    private List<LaboratorioDto> laboratorios = new();

    private Dictionary<int,string> mapServicios = new();
    private Dictionary<int,string> mapPrioridades = new();
    private Dictionary<int,string> mapEstados = new();

    // Modal Nueva Incidencia
    private bool mostrarFormularioNueva = false;
    private bool saving = false;
    private NuevaIncidenciaDto modelNueva = new();

    // Modal Detalle
    private bool mostrarDetalle = false;
    private int? incidenciaDetalleId = null;
    private IncidenciaDetalleDto? incDetalle = null;
    private bool loadingDetalle = false;
    private string nuevoComentario = "";
    private bool esInterno = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            if (!Auth.IsAuthenticated) { Nav.NavigateTo("/login", true); return; }
            var t1 = ServSvc.ListarAsync();
            var t2 = PriSvc.ListarAsync();
            var t3 = EstSvc.ListarAsync();
            var t4 = LabSvc.ListarAsync();
            await Task.WhenAll(t1, t2, t3, t4);

            servicios = t1.Result; prioridades = t2.Result; estados = t3.Result; laboratorios = t4.Result;
            mapServicios = servicios.ToDictionary(x => x.Id, x => x.Nombre);
            mapPrioridades = prioridades.ToDictionary(x => x.Id, x => x.Nombre);
            mapEstados = estados.ToDictionary(x => x.Id, x => (string.IsNullOrWhiteSpace(x.Nombre) ? (x.Codigo ?? $"#{x.Id}") : x.Nombre));
        }
        catch (Exception ex) { error = "Error cargando catálogos: " + ex.Message; }

        await Cargar();
    }

    private async Task Cargar()
    {
        loading = true; error = null;
        try
        {
            items = await IncSvc.ListarAsync(Auth.CurrentUserId!.Value, filtroTexto, filtroEstadoId, filtroPrioridadId);
            await ResolverNombresFaltantes();
        }
        catch (Exception ex) { error = ex.Message; }
        finally { loading = false; }
    }

    private async Task ResolverNombresFaltantes()
    {
        // Servicio
        var faltanServ = items.Select(i => (i.ServicioId, i.ServicioNombre))
                              .Where(x => string.IsNullOrWhiteSpace(x.ServicioNombre) && !mapServicios.ContainsKey(x.ServicioId))
                              .Select(x => x.ServicioId).Distinct().ToList();
        foreach (var id in faltanServ)
        {
            var dto = await ServSvc.ObtenerAsync(id);
            if (dto != null) mapServicios[id] = dto.Nombre;
        }

        // Prioridad
        var faltanPri = items.Select(i => (i.PrioridadId, i.PrioridadNombre))
                             .Where(x => string.IsNullOrWhiteSpace(x.PrioridadNombre) && !mapPrioridades.ContainsKey(x.PrioridadId))
                             .Select(x => x.PrioridadId).Distinct().ToList();
        foreach (var id in faltanPri)
        {
            var dto = await PriSvc.ObtenerAsync(id);
            if (dto != null) mapPrioridades[id] = dto.Nombre;
        }

        // Estado
        var faltanEst = items.Select(i => (i.EstadoId, i.EstadoNombre))
                             .Where(x => string.IsNullOrWhiteSpace(x.EstadoNombre) && !mapEstados.ContainsKey(x.EstadoId))
                             .Select(x => x.EstadoId).Distinct().ToList();
        foreach (var id in faltanEst)
        {
          var dto = await EstSvc.ObtenerAsync(id);
          if (dto != null)
          {
            var nombre = !string.IsNullOrWhiteSpace(dto.Nombre) ? dto.Nombre : (dto.Codigo ?? $"#{id}");
            mapEstados[id] = nombre;
          }
        }

        StateHasChanged();
    }

    private string NombreServicio(IncidenciaResumenDto i)
        => !string.IsNullOrWhiteSpace(i.ServicioNombre) ? i.ServicioNombre
         : mapServicios.TryGetValue(i.ServicioId, out var n) ? n : $"#{i.ServicioId}";

    private string NombrePrioridad(IncidenciaResumenDto i)
        => !string.IsNullOrWhiteSpace(i.PrioridadNombre) ? i.PrioridadNombre
         : mapPrioridades.TryGetValue(i.PrioridadId, out var n) ? n : $"#{i.PrioridadId}";

    private string NombreEstado(IncidenciaResumenDto i)
        => !string.IsNullOrWhiteSpace(i.EstadoNombre) ? i.EstadoNombre
         : mapEstados.TryGetValue(i.EstadoId, out var n) ? n : $"#{i.EstadoId}";

    // Modal Nueva Incidencia
    private void AbrirFormularioNueva()
    {
        modelNueva = new NuevaIncidenciaDto
        {
            CreadorId = Auth.CurrentUserId!.Value,
            ServicioId = servicios.Count > 0 ? servicios[0].Id : 0,
            PrioridadId = 2
        };
        mostrarFormularioNueva = true;
    }

    private async Task GuardarNuevaIncidencia()
    {
        error = null; saving = true;
        try
        {
            var idNueva = await IncSvc.CrearAsync(modelNueva);
            mostrarFormularioNueva = false;
            await Cargar();
            // Abrir detalle de la nueva incidencia
            await AbrirDetalle(idNueva);
        }
        catch (Exception ex) { error = ex.Message; }
        finally { saving = false; }
    }

    private void CancelarNueva() => mostrarFormularioNueva = false;

    // Modal Detalle
    private async Task AbrirDetalle(int id)
    {
        incidenciaDetalleId = id;
        mostrarDetalle = true;
        loadingDetalle = true;
        try
        {
            incDetalle = await IncSvc.ObtenerDetalleAsync(id);
            // Resolver nombres si es necesario
            if (incDetalle != null)
            {
                if (string.IsNullOrWhiteSpace(incDetalle.ServicioNombre) && mapServicios.ContainsKey(incDetalle.ServicioId))
                    incDetalle.ServicioNombre = mapServicios[incDetalle.ServicioId];
                if (string.IsNullOrWhiteSpace(incDetalle.PrioridadNombre) && mapPrioridades.ContainsKey(incDetalle.PrioridadId))
                    incDetalle.PrioridadNombre = mapPrioridades[incDetalle.PrioridadId];
                if (string.IsNullOrWhiteSpace(incDetalle.EstadoNombre) && mapEstados.ContainsKey(incDetalle.EstadoId))
                    incDetalle.EstadoNombre = mapEstados[incDetalle.EstadoId];
            }
        }
        catch (Exception ex) { error = ex.Message; }
        finally { loadingDetalle = false; }
    }

    private void CerrarDetalle()
    {
        mostrarDetalle = false;
        incidenciaDetalleId = null;
        incDetalle = null;
        nuevoComentario = "";
    }

    private async Task EnviarComentario()
    {
        if (string.IsNullOrWhiteSpace(nuevoComentario) || incidenciaDetalleId == null) return;
        try
        {
            await IncSvc.AgregarComentarioAsync(incidenciaDetalleId.Value, new ComentarioCrearDto { Texto = nuevoComentario, EsInterno = esInterno });
            nuevoComentario = "";
            esInterno = false;
            await AbrirDetalle(incidenciaDetalleId.Value); // Recargar
        }
        catch (Exception ex) { error = ex.Message; }
    }
}

<nav class="main-navigation">
  <div class="nav-container">
    <ul class="nav-menu">
      <li><a href="/"><i class="fas fa-tachometer-alt"></i> Inicio</a></li>
      <li><a class="active" href="/incidencias"><i class="fas fa-list-alt"></i> Incidencias</a></li>
      <li><a  href="/servicios"><i class="fas fa-cogs"></i> Servicios</a></li>
      <li><a href="/kb"><i class="fas fa-book"></i> Base de Conocimiento</a></li>
      <li><a href="/laboratorios"><i class="fas fa-building"></i> Laboratorios</a></li>
    </ul>
  </div>
</nav>
<main class="main-content">
  <section class="content-card">
    <div class="page-header">
      <div>
        <h2 class="page-title"><i class="fas fa-list-alt"></i> Incidencias</h2>
        <p class="page-subtitle">Gestiona las incidencias del sistema</p>
      </div>
      @if (!loading)
      {
        <button class="btn btn-primary btn-new" @onclick="AbrirFormularioNueva">
          <i class="fas fa-plus"></i> Nueva incidencia
        </button>
      }
    </div>

    <!-- Filtros -->
    <div class="filters-section">
      <div class="filters-header">
        <h3><i class="fas fa-filter"></i> Filtros</h3>
        <button class="btn-icon btn-refresh" @onclick="Cargar" title="Actualizar">
          <i class="fas fa-sync-alt"></i>
        </button>
      </div>
      <div class="filters-grid">
        <div class="form-group">
          <label><i class="fas fa-search"></i> Buscar</label>
          <input class="form-control" placeholder="Título, descripción..." @bind="filtroTexto" />
        </div>
        <div class="form-group">
          <label><i class="fas fa-flag"></i> Estado</label>
          <InputSelect @bind-Value="filtroEstadoId" class="form-control">
            <option value="">Todos los estados</option>
            @foreach (var e in estados)
            {
              <option value="@e.Id">@e.Nombre</option>
            }
          </InputSelect>
        </div>
        <div class="form-group">
          <label><i class="fas fa-exclamation-circle"></i> Prioridad</label>
          <InputSelect @bind-Value="filtroPrioridadId" class="form-control">
            <option value="">Todas las prioridades</option>
            @foreach (var p in prioridades)
            {
              <option value="@p.Id">@p.Nombre</option>
            }
          </InputSelect>
        </div>
        <div class="form-group-action">
          <button class="btn btn-primary" @onclick="Cargar">
            <i class="fas fa-search"></i> Aplicar
          </button>
        </div>
      </div>
    </div>

    @if (loading)
    {
      <div class="loading-container">
        <div class="spinner"></div>
        <p class="muted">Cargando incidencias...</p>
      </div>
    }
    else if (!string.IsNullOrEmpty(error))
    {
      <div class="alert alert-error">
        <i class="fas fa-exclamation-circle"></i> @error
      </div>
    }
    else if (items.Count == 0)
    {
      <div class="empty-state">
        <i class="fas fa-inbox"></i>
        <h3>No hay incidencias</h3>
        <p>No se encontraron incidencias con los filtros aplicados</p>
        <button class="btn btn-primary" @onclick="AbrirFormularioNueva">
          <i class="fas fa-plus"></i> Crear incidencia
        </button>
      </div>
    }
    else
    {
      <div class="table-container">
        <table class="table-modern">
          <thead>
            <tr>
              <th>ID</th>
              <th>Fecha</th>
              <th>Servicio</th>
              <th>Título</th>
              <th>Prioridad</th>
              <th>Estado</th>
              <th class="text-end">Acciones</th>
            </tr>
          </thead>
          <tbody>
            @foreach (var t in items)
            {
              <tr>
                <td><span class="badge badge-id">@t.Id</span></td>
                <td class="text-muted">@t.FechaCreacion.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                  <span class="badge badge-category">
                    <i class="fas fa-wrench"></i> @NombreServicio(t)
                  </span>
                </td>
                <td class="fw-medium">@t.Titulo</td>
                <td>
                  @{
                    var prioNombre = NombrePrioridad(t).ToLower();
                    var prioBadgeClass = prioNombre.Contains("alta") || prioNombre.Contains("crítica") ? "badge-danger" 
                                       : prioNombre.Contains("media") ? "badge-warning" 
                                       : "badge-success";
                  }
                  <span class="badge @prioBadgeClass">
                    <i class="fas fa-exclamation-circle"></i> @NombrePrioridad(t)
                  </span>
                </td>
                <td>
                  @{
                    var estadoNombre = NombreEstado(t).ToLower();
                    var estadoBadgeClass = estadoNombre.Contains("resuelto") || estadoNombre.Contains("cerrado") ? "badge-success"
                                         : estadoNombre.Contains("progreso") || estadoNombre.Contains("asignado") ? "badge-warning"
                                         : "badge-info";
                  }
                  <span class="badge @estadoBadgeClass">
                    <i class="fas fa-info-circle"></i> @NombreEstado(t)
                  </span>
                </td>
                <td class="text-end">
                  <div class="action-buttons">
                    <button class="btn-icon btn-view" @onclick="() => AbrirDetalle(t.Id)" title="Ver detalles">
                      <i class="fas fa-eye"></i>
                    </button>
                  </div>
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    }

    @* Modal Nueva Incidencia *@
    @if (mostrarFormularioNueva)
    {
      <div class="modal-overlay" @onclick="CancelarNueva">
        <div class="modal modal-large" @onclick:stopPropagation="true">
          <div class="modal-header">
            <h5 class="modal-title">
              <i class="fas fa-plus-circle"></i> Nueva Incidencia
            </h5>
            <button class="btn-close" @onclick="CancelarNueva" title="Cerrar">×</button>
          </div>
          <div class="modal-body">
            @if (!string.IsNullOrEmpty(error)) { <div class="alert alert-error"><i class="fas fa-exclamation-circle"></i> @error</div> }
            <div class="form-grid">
              <div class="form-group">
                <label class="form-label"><i class="fas fa-wrench"></i> Servicio</label>
                <InputSelect @bind-Value="modelNueva.ServicioId" class="form-control">
                  @foreach (var s in servicios) { <option value="@s.Id">@s.Nombre</option> }
                </InputSelect>
              </div>
              <div class="form-group">
                <label class="form-label"><i class="fas fa-exclamation-circle"></i> Prioridad</label>
                <InputSelect @bind-Value="modelNueva.PrioridadId" class="form-control">
                  <option value="1">Baja</option>
                  <option value="2">Media</option>
                  <option value="3">Alta</option>
                  <option value="4">Crítica</option>
                </InputSelect>
              </div>
            </div>
            <div class="form-group">
              <label class="form-label"><i class="fas fa-heading"></i> Título</label>
              <input class="form-control" @bind="modelNueva.Titulo" placeholder="Ej: No funciona la pc del laboratorio" />
            </div>
            <div class="form-group">
              <label class="form-label"><i class="fas fa-align-left"></i> Descripción</label>
              <textarea class="form-control" rows="4" @bind="modelNueva.Descripcion" placeholder="Describe el problema en detalle..."></textarea>
            </div>
            <div class="form-group">
              <label class="form-label"><i class="fas fa-building"></i> Laboratorio (opcional)</label>
              <InputSelect @bind-Value="modelNueva.LaboratorioId" class="form-control">
                <option value="">Sin laboratorio específico</option>
                @foreach (var l in laboratorios)
                {
                  <option value="@l.Id">@l.Nombre</option>
                }
              </InputSelect>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-success" disabled="@saving" @onclick="GuardarNuevaIncidencia">
              <i class="fas fa-paper-plane"></i> @(saving ? "Guardando..." : "Crear Incidencia")
            </button>
            <button type="button" class="btn btn-secondary" @onclick="CancelarNueva">
              <i class="fas fa-times"></i> Cancelar
            </button>
          </div>
        </div>
      </div>
    }

    @* Modal Detalle Incidencia *@
    @if (mostrarDetalle && incidenciaDetalleId != null)
    {
      <div class="modal-overlay" @onclick="CerrarDetalle">
        <div class="modal modal-xl" @onclick:stopPropagation="true">
          <div class="modal-header">
            <h5 class="modal-title">
              <i class="fas fa-ticket-alt"></i> Incidencia #@incidenciaDetalleId
            </h5>
            <button class="btn-close" @onclick="CerrarDetalle" title="Cerrar">×</button>
          </div>
          <div class="modal-body">
            @if (loadingDetalle)
            {
              <div class="loading-container-small">
                <div class="spinner-small"></div>
                <p class="muted">Cargando detalles...</p>
              </div>
            }
            else if (incDetalle == null)
            {
              <p class="muted">No se pudo cargar la incidencia</p>
            }
            else
            {
              <div class="detalle-grid">
                <div class="detalle-section">
                  <h4><i class="fas fa-info-circle"></i> Información</h4>
                  <div class="detalle-info">
                    <div class="info-row">
                      <span class="info-label">Título:</span>
                      <span class="info-value fw-medium">@incDetalle.Titulo</span>
                    </div>
                    <div class="info-row">
                      <span class="info-label">Descripción:</span>
                      <span class="info-value">@incDetalle.Descripcion</span>
                    </div>
                    <div class="info-row">
                      <span class="info-label">Servicio:</span>
                      <span class="badge badge-category">
                        <i class="fas fa-wrench"></i> @incDetalle.ServicioNombre
                      </span>
                    </div>
                    <div class="info-row">
                      <span class="info-label">Prioridad:</span>
                      @{
                        var prioNombre = incDetalle.PrioridadNombre?.ToLower() ?? "";
                        var prioBadgeClass = prioNombre.Contains("alta") || prioNombre.Contains("crítica") ? "badge-danger" 
                                           : prioNombre.Contains("media") ? "badge-warning" 
                                           : "badge-success";
                      }
                      <span class="badge @prioBadgeClass">
                        <i class="fas fa-exclamation-circle"></i> @incDetalle.PrioridadNombre
                      </span>
                    </div>
                    <div class="info-row">
                      <span class="info-label">Estado:</span>
                      @{
                        var estadoNombre = incDetalle.EstadoNombre?.ToLower() ?? "";
                        var estadoBadgeClass = estadoNombre.Contains("resuelto") || estadoNombre.Contains("cerrado") ? "badge-success"
                                             : estadoNombre.Contains("progreso") || estadoNombre.Contains("asignado") ? "badge-warning"
                                             : "badge-info";
                      }
                      <span class="badge @estadoBadgeClass">
                        <i class="fas fa-flag"></i> @incDetalle.EstadoNombre
                      </span>
                    </div>

                  </div>
                </div>

                <div class="detalle-section">
                  <h4><i class="fas fa-comments"></i> Comentarios (@(incDetalle.Comentarios?.Count ?? 0))</h4>
                  @if (incDetalle.Comentarios?.Count > 0)
                  {
                    <div class="comentarios-list">
                      @foreach (var c in incDetalle.Comentarios)
                      {
                        <div class="comentario-item @(c.EsInterno ? "comentario-interno" : "")">
                          <div class="comentario-header">
                            <span class="comentario-autor">
                              <i class="fas fa-user-circle"></i> @c.AutorNombre
                            </span>
                            <span class="comentario-fecha text-muted">
                              @c.Fecha.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                            </span>
                            @if (c.EsInterno)
                            {
                              <span class="badge badge-warning"><i class="fas fa-lock"></i> Interno</span>
                            }
                          </div>
                          <div class="comentario-texto">@c.Texto</div>
                        </div>
                      }
                    </div>
                  }
                  else
                  {
                    <p class="muted">No hay comentarios aún</p>
                  }

                  <div class="comentario-form">
                    <h5>Agregar Comentario</h5>
                    <textarea class="form-control" rows="3" @bind="nuevoComentario" placeholder="Escribe tu comentario..."></textarea>
                    <div class="comentario-actions">
                      <div class="custom-checkbox">
                        <InputCheckbox id="chkInterno" @bind-Value="esInterno" />
                        <label for="chkInterno"><i class="fas fa-lock"></i> Comentario interno</label>
                      </div>
                      <button class="btn btn-primary" @onclick="EnviarComentario" disabled="@string.IsNullOrWhiteSpace(nuevoComentario)">
                        <i class="fas fa-paper-plane"></i> Enviar
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            }
          </div>
        </div>
      </div>
    }
  </section>
</main>

