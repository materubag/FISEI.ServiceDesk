        <h2 class="page-title"><i class="fas fa-tachometer-alt"></i> Panel de Control</h2>
        <p class="page-subtitle">Bienvenido al sistema de gestión de incidencias - FISEI</p>
      </div>
    </div>

    @if (loading)
    {
      <div class="loading-container">
        <div class="spinner"></div>
        <p class="muted">Cargando datos del dashboard...</p>
      </div>
    }
    else if (!string.IsNullOrEmpty(error))
    {
      <div class="alert alert-error">
        <i class="fas fa-exclamation-circle"></i> @error
      </div>
    }
    else
    {
      <div class="stats-grid">
        <div class="stat-card stat-activos">
          <div class="stat-icon">
            <i class="fas fa-ticket-alt"></i>
          </div>
          <div class="stat-content">
            <span class="stat-label">Activas</span>
            <span class="stat-value">@vm.Activos</span>
          </div>
        </div>

        <div class="stat-card stat-progreso">
          <div class="stat-icon">
            <i class="fas fa-clock"></i>
          </div>
          <div class="stat-content">
            <span class="stat-label">En Progreso</span>
            <span class="stat-value">@vm.EnProgreso</span>
          </div>
        </div>

        <div class="stat-card stat-resueltos">
          <div class="stat-icon">
            <i class="fas fa-check-circle"></i>
          </div>
          <div class="stat-content">
            <span class="stat-label">Resueltos (mes)</span>
            <span class="stat-value">@vm.ResueltosMes</span>
          </div>
        </div>

        <div class="stat-card stat-criticos">
          <div class="stat-icon">
            <i class="fas fa-exclamation-triangle"></i>
          </div>
          <div class="stat-content">
            <span class="stat-label">Críticos</span>
            <span class="stat-value">@vm.Criticos</span>
          </div>
        </div>
      </div>

      <div class="recent-header">
        <h3><i class="fas fa-history"></i> Incidencias Recientes</h3>
        <a class="btn btn-primary" href="/incidencias">
          <i class="fas fa-arrow-right"></i> Ver todas
        </a>
      </div>

      @if (vm.Recientes.Count == 0)
      {
        <div class="empty-state">
          <i class="fas fa-inbox"></i>
          <h3>No hay incidencias recientes</h3>
          <p>No se han registrado incidencias recientemente</p>
        </div>
      }
      else
      {
        <div class="table-container">
          <table class="table-modern">
            <thead>
              <tr>
                <th>ID</th>
                <th>Fecha</th>
                <th>Servicio</th>
                <th>Título</th>
                <th>Prioridad</th>
                <th>Estado</th>
                <th class="text-end">Acciones</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var t in vm.Recientes)
              {
                <tr>
                  <td><span class="badge badge-id">@t.Id</span></td>
                  <td class="text-muted">@t.FechaCreacion.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                  <td>
                    <span class="badge badge-category">
                      <i class="fas fa-wrench"></i> @t.ServicioNombre
                    </span>
                  </td>
                  <td class="fw-medium">@t.Titulo</td>
                  <td>
                    @{
                      var prioNombre = t.PrioridadNombre?.ToLower() ?? "";
                      var prioBadgeClass = prioNombre.Contains("alta") || prioNombre.Contains("crítica") ? "badge-danger" 
                                         : prioNombre.Contains("media") ? "badge-warning" 
                                         : "badge-success";
                    }
                    <span class="badge @prioBadgeClass">
                      <i class="fas fa-exclamation-circle"></i> @t.PrioridadNombre
                    </span>
                  </td>
                  <td>
                    @{
                      var estadoNombre = t.EstadoNombre?.ToLower() ?? "";
                      var estadoBadgeClass = estadoNombre.Contains("resuelto") || estadoNombre.Contains("cerrado") ? "badge-success"
                                           : estadoNombre.Contains("progreso") || estadoNombre.Contains("asignado") ? "badge-warning"
                                           : "badge-info";
                    }
                    <span class="badge @estadoBadgeClass">
                      <i class="fas fa-info-circle"></i> @t.EstadoNombre
                    </span>
                  </td>
                  <td class="text-end">
                    <div class="action-buttons">
                      <a href="/incidencias" class="btn-icon btn-view" title="Ver detalles">
                        <i class="fas fa-eye"></i>
                      </a>
                    </div>
                  </td>
                </tr>
              }
            </tbody>
          </table>
        </div>
      }
    }
  </section>
</main>

@if (mostrarDetalle && incDetalle != null)
{
  <div class="modal-overlay" @onclick="CerrarDetalle">
    <div class="modal modal-xl" @onclick:stopPropagation="true">
      <div class="modal-header">
        <h3><i class="fas fa-ticket-alt"></i> Detalle de Incidencia #@incDetalle.Id</h3>
        <button type="button" class="btn-close" @onclick="CerrarDetalle">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <div class="modal-body">
        <div class="detalle-grid">
          <div class="detalle-section">
            <h4 class="section-title"><i class="fas fa-info-circle"></i> Información General</h4>
            <div class="info-group">
              <div class="info-row">
                <span class="info-label">Título:</span>
                <span class="info-value">@incDetalle.Titulo</span>
              </div>
              <div class="info-row">
                <span class="info-label">Descripción:</span>
                <span class="info-value">@incDetalle.Descripcion</span>
              </div>
              <div class="info-row">
                <span class="info-label">Servicio:</span>
                <span class="info-value">
                  <span class="badge badge-category">@incDetalle.ServicioNombre</span>
                </span>
              </div>
              <div class="info-row">
                <span class="info-label">Prioridad:</span>
                <span class="info-value">
                  @{
                    var prioNombre = incDetalle.PrioridadNombre?.ToLower() ?? "";
                    var prioBadgeClass = prioNombre.Contains("alta") || prioNombre.Contains("crítica") ? "badge-danger" 
                                       : prioNombre.Contains("media") ? "badge-warning" 
                                       : "badge-success";
                  }
                  <span class="badge @prioBadgeClass">@incDetalle.PrioridadNombre</span>
                </span>
              </div>
              <div class="info-row">
                <span class="info-label">Estado:</span>
                <span class="info-value">
                  @{
                    var estadoNombre = incDetalle.EstadoNombre?.ToLower() ?? "";
                    var estadoBadgeClass = estadoNombre.Contains("resuelto") || estadoNombre.Contains("cerrado") ? "badge-success"
                                         : estadoNombre.Contains("progreso") || estadoNombre.Contains("asignado") ? "badge-warning"
                                         : "badge-info";
                  }
                  <span class="badge @estadoBadgeClass">@incDetalle.EstadoNombre</span>
                </span>
              </div>
            </div>
          </div>

          <div class="detalle-section">
            <h4 class="section-title"><i class="fas fa-comments"></i> Comentarios</h4>
            <div class="comentarios-container">
              @if (incDetalle.Comentarios != null && incDetalle.Comentarios.Any())
              {
                <div class="comentarios-list">
                  @foreach (var c in incDetalle.Comentarios)
                  {
                    <div class="comentario-item">
                      <div class="comentario-header">
                        <span class="comentario-autor">
                          <i class="fas fa-user-circle"></i> @c.AutorNombre
                        </span>
                        <span class="comentario-fecha text-muted">
                          @c.Fecha.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                        </span>
                      </div>
                      <div class="comentario-texto">@c.Texto</div>
                    </div>
                  }
                </div>
              }
              else
              {
                <p class="text-muted text-center py-3">No hay comentarios aún</p>
              }

              <div class="comentario-form">
                <textarea 
                  class="form-control" 
                  rows="3" 
                  placeholder="Agregar un comentario..."
                  @bind="nuevoComentario">
                </textarea>
                <button type="button" class="btn btn-primary" @onclick="EnviarComentario">
                  <i class="fas fa-paper-plane"></i> Enviar Comentario
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
}

