@page "/login"
@using Microsoft.AspNetCore.Components.Forms
@using System.ComponentModel.DataAnnotations
@inject NavigationManager NavigationManager
@inject FISEI.ServiceDesk.Web.Services.AuthClientService Auth

<div class="min-h-screen bg-gray-100 flex flex-col">
  <header class="bg-white shadow-md">
    <div class="max-w-6xl px-10 py-6 flex items-center">
      <img src="/images/logo.png" alt="Logo UTA" class="h-20 object-contain" />
    </div>
  </header>

  <main class="flex-1 flex items-center justify-center px-4 py-12">
    <div class="w-full max-w-md bg-white rounded-xl shadow-lg border border-gray-200">
      <div class="px-6 pt-6">
        <h2 class="text-lg font-semibold text-gray-800 flex items-center gap-2">
          <span class="inline-block w-2 h-2 rounded-full bg-red-700"></span>
          Iniciar sesión
        </h2>
        <p class="text-sm text-gray-500 mt-1">Sistema de Gestión de Tickets - Laboratorios FISEI</p>
      </div>
      <div class="p-6">
        <EditForm Model="loginModel" OnSubmit="HandleLoginSubmit">
          <DataAnnotationsValidator />
          <ValidationSummary />
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 ">Correo institucional</label>
              <InputText @bind-Value="loginModel.Email" class="mt-1 w-full rounded-md border-gray-300 focus:border-red-700 focus:ring-red-700 text-black" />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Contraseña</label>
              <InputText @bind-Value="loginModel.Password" type="password" class="mt-1 w-full rounded-md border-gray-300 focus:border-red-700 focus:ring-red-700 text-black" />
            </div>
            <div class="flex items-center justify-between">
              <label class="inline-flex items-center gap-2 text-sm text-gray-700">
                <input type="checkbox" class="rounded border-gray-300 text-red-700 focus:ring-red-700" @bind="loginModel.Remember" />
                Recordarme
              </label>
              <a href="/recuperar" class="text-sm text-red-700 hover:text-red-800">¿Olvidaste tu contraseña?</a>
            </div>
            <button type="submit" class="w-full bg-red-800 hover:bg-red-900 text-white font-semibold py-2.5 rounded-md transition-colors">Ingresar</button>
            @if (!string.IsNullOrEmpty(error))
            {
              <div class="mt-2 text-sm text-red-700">@error</div>
            }
          </div>
        </EditForm>
      </div>
    </div>
  </main>

  <footer class="bg-white border-t border-gray-200">
    <div class="max-w-6xl mx-auto px-4 py-6 text-sm text-gray-600">
      &copy; @DateTime.UtcNow.Year Universidad Técnica de Ambato - FIESI
    </div>
  </footer>
</div>

@code {
  private LoginModel loginModel = new();
  private string? error;
  private bool submitting;

  protected override void OnInitialized()
  {
    // Si ya está autenticado, no quedarse en login
    if (Auth.IsAuthenticated)
    {
      NavigationManager.NavigateTo("/", true);
    }
  }

  private async Task HandleLogin()
  {
    error = null;
    var ok = await Auth.LoginAsync(loginModel.Email, loginModel.Password);
    if (ok)
    {
      var role = Auth.CurrentUserRole?.Trim();
      string target = role?.ToLowerInvariant() switch
      {
        "estudiante" => "/estudiante",
        "tecnico" => "/tecnico",
        "administrador" => "/admin",
        "docente" => "/docente",
        _ => "/"
      };
      NavigationManager.NavigateTo(target, true);
      // Redibujar por si el router aún mantiene la vista
      StateHasChanged();
      return;
    }
    else
    {
      error = Auth.LastError ?? "Credenciales inválidas o error de autenticación.";
    }
  }

  private async Task HandleLoginSubmit(EditContext _)
  {
    if (submitting) return;
    submitting = true;
    try
    {
      await HandleLogin();
    }
    finally
    {
      submitting = false;
      StateHasChanged();
    }
  }

  public class LoginModel
  {
    [Required]
    [EmailAddress]
    public string Email { get; set; } = string.Empty;

    [Required]
    public string Password { get; set; } = string.Empty;

    public bool Remember { get; set; }
  }
}

