@page "/login"
@using Microsoft.AspNetCore.Components.Forms
@using System.ComponentModel.DataAnnotations
@inject FISEI.ServiceDesk.Web.Services.AuthClientService Auth
@inject NavigationManager Nav

<div class="min-h-screen bg-gray-100 flex flex-col">
  

  <main class="flex-1 flex items-center justify-center px-4 py-12">
    <div class="w-full max-w-md bg-white rounded-xl shadow-lg border border-gray-200">
      <div class="px-6 pt-6">
        
        <h2 class="text-lg font-semibold text-gray-800 text-center">
          Iniciar sesión
        </h2>
        <p class="text-sm text-gray-500 mt-1">Sistema de Gestión de Tickets - Laboratorios FISEI</p>
      </div>
      <div class="p-6">
        @if (!string.IsNullOrEmpty(error))
        {
          <div class="mb-4 rounded-md border border-red-200 bg-red-50 text-red-800 px-3 py-2 text-sm">@error</div>
        }
        <EditForm Model="loginModel" OnValidSubmit="HandleLogin">
          <DataAnnotationsValidator />
          <ValidationSummary />
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 ">Correo institucional</label>
              <InputText @bind-Value="loginModel.Email" class="mt-1 w-full rounded-md border-gray-300 focus:border-red-700 focus:ring-red-700 text-black" />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Contraseña</label>
              <InputText @bind-Value="loginModel.Password" type="password" class="mt-1 w-full rounded-md border-gray-300 focus:border-red-700 focus:ring-red-700 text-black" />
            </div>
            <div class="flex items-center justify-between">
              <label class="inline-flex items-center gap-2 text-sm text-gray-700">
                <input type="checkbox" class="rounded border-gray-300 text-red-700 focus:ring-red-700" @bind="loginModel.Remember" />
                Recordarme
              </label>
              <a href="/recuperar" class="text-sm text-red-700 hover:text-red-800">¿Olvidaste tu contraseña?</a>
            </div>
            <button type="submit" class="w-full bg-red-800 hover:bg-red-900 text-white font-semibold py-2.5 rounded-md transition-colors" disabled="@loading">
              @(loading ? "Ingresando..." : "Ingresar")
            </button>
          </div>
        </EditForm>
      </div>
    </div>
  </main>

  <footer class="bg-white border-t border-gray-200">
    <div class="max-w-6xl mx-auto px-4 py-6 text-sm text-gray-600">
      &copy; @DateTime.UtcNow.Year Universidad Técnica de Ambato - FIESI
    </div>
  </footer>
</div>

@code {
  private LoginModel loginModel = new();
  private bool loading;
  private string? error;

  private async Task HandleLogin()
  {
    error = null;
    loading = true;
    var ok = await Auth.LoginAsync(loginModel.Email, loginModel.Password);
    loading = false;
    if (!ok)
    {
        error = "Credenciales inválidas.";
        return;
    }
    Nav.NavigateTo("/", false);
  }

  public class LoginModel
  {
    [Required]
    [EmailAddress]
    public string Email { get; set; } = string.Empty;

    [Required]
    public string Password { get; set; } = string.Empty;

    public bool Remember { get; set; }
  }
}

